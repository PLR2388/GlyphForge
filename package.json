{
  "name": "glyphforge",
  "version": "1.0.0",
  "description": "Unicode Text Transform MCP Server & API - Transform text into 30+ fancy styles",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "glyphforge-mcp": "dist/mcp/server.js"
  },
  "files": [
    "dist/mcp",
    "dist/transforms",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PLR2388/GlyphForge.git"
  },
  "homepage": "https://github.com/PLR2388/GlyphForge#readme",
  "scripts": {
    "dev": "tsx watch src/api/index.ts",
    "dev:mcp": "tsx src/mcp/server.ts",
    "build": "tsc",
    "start": "node dist/api/index.js",
    "start:mcp": "node dist/mcp/server.js",
    "test": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "unicode",
    "text-transform",
    "zalgo",
    "vaporwave",
    "fancy-text",
    "api"
  ],
  "author": "Paul-Louis Renard",
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@hono/node-server": "^1.13.0",
    "@hono/zod-validator": "^0.4.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@upstash/ratelimit": "^2.0.0",
    "@upstash/redis": "^1.34.0",
    "better-sqlite3": "^11.0.0",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.6.0",
    "nanoid": "^5.0.0",
    "resend": "^6.6.0",
    "stripe": "^17.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.0.0",
    "drizzle-kit": "^0.28.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
